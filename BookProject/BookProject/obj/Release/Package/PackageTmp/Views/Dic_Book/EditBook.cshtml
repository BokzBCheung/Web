@{
    Layout = null;
    MODEL.T_DIC_Book book = ViewBag.lst;
}

<div class="pageContent">
	<form method="post" action="Dic_Book/EditBookSave" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
		<div class="pageFormContent" layoutH="56">
			<p>
				<label>ISBN：</label>
                <input name="ID" type="hidden" size="30" value="@book.ID" class="required" />
				<input name="ISBN" type="text" size="30" value="@book.ISBN" class="required" />
			</p>
			<p>
				<label>图书名称：</label>
				<input name="图书名称" class="required" type="text" size="30" value="@book.Name" alt="请修改图书名称"/>
			</p>
            <p>
				<label>出版社：</label>
				<input name="出版社" type="text" size="30" value="@book.Publisher" alt="请修改出版社名称"/>
			</p>
            <p>
				<label>定价：</label>
				<input name="定价" class="required" type="text" size="30" value="@book.Pricing" alt="请修改定价"/>
			</p>
            <p>
				<label>作者：</label>
				<input name="作者" type="text" size="30" value="@book.Author" alt="请修改作者"/>
			</p>
            <p>
				<label>出版年度：</label>
				<input name="出版年度"  type="text" size="30" value="@DateTime.Now" alt="格式:2015-11-11,空则默认为当前时间"/>
			</p>
            <p>
				<label>备注：</label>
				<input name="备注" type="text" size="30" value="@book.Notes" alt="请输入备注"/>
			</p>
			
		</div>
		<div class="formBar">
			<ul>
				<!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
				<li>
					<div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
				</li>
			</ul>
		</div>
	</form>
</div>

