@{
    Layout = null;
    List<Match.Model.T_Match_Student> lst = ViewBag.lst;
}

<div class="pageHeader" style="border:1px #B8D0D6 solid">
	<form id="pagerForm" onsubmit="return divSearch(this, 'jbsxBox');" action="/Match/User/SList" method="post">
	<input type="hidden" name="pageNum" value="@ViewBag.pageindex" />
	<input type="hidden" name="numPerPage" value="@ViewBag.pagesize" />
	<input type="hidden" name="orderField" value="${param.orderField}" />
	<input type="hidden" name="orderDirection" value="${param.orderDirection}" />
	<div class="searchBar">
		<table class="searchContent">
			<tr>
				<td class="dateRange">
					在校时间:
					<input type="text" value="" readonly="readonly" class="date" name="dateStart">
					<span class="limit">-</span>
					<input type="text" value="" readonly="readonly" class="date" name="dateEnd">
				</td>
				<td>
					性别：
					<input type="radio" name="njjg" value="" checked="checked" />全部
					<input type="radio" name="njjg" value="1"/>男
					<input type="radio" name="njjg" value="2"/>女
				</td>
				<td>
					姓名：<input type="text" name="keywords" />
				</td>
				<td><div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div></td>
			</tr>
		</table>
	</div>
	</form>
</div>

<div class="pageContent" style="border-left:1px #B8D0D6 solid;border-right:1px #B8D0D6 solid;">
<div class="panelBar">
		<ul class="toolBar">
			<li><a class="add" href="demo/pagination/dialog2.html" target="dialog" mask="true"><span>添加用户</span></a></li>
			<li><a class="delete" href="demo/pagination/ajaxDone3.html?uid={sid_obj}" target="ajaxTodo" title="确定要删除吗?"><span>删除</span></a></li>
			<li><a class="edit" href="demo/pagination/dialog2.html?uid={sid_obj}" target="dialog" mask="true"><span>修改</span></a></li>
			<li class="line">line</li>
			<li><a class="icon" href="demo/common/dwz-team.xls" target="dwzExport" title="实要导出这些记录吗?"><span>导出EXCEL</span></a></li>
		</ul>
	</div>
	<table class="table" width="99%" layoutH="260" rel="jbsxBox" >
		<thead style="text-align:center">
			<tr>
				<th width="80">编号</th>
				<th width="120">姓名</th>
				<th orderField="name">所属学院</th>
				<th width="120">电话号码</th>
				<th width="120">出生年月</th>
				<th width="150">备注</th>
			</tr>
		</thead>
        <tbody style="text-align: center">
            @foreach (var item in lst)
            { 
                <tr target="sid_obj" rel="1">
                    <td>@item.SID</td>
                    <td>@item.SName</td>
                    <td>@item.SCollege</td>
                    <td>@item.SPhone</td>
                    <td>@item.SBirthday</td>
                    <td>@item.SClass</td>
                </tr>
            }

        </tbody>
	</table>
    <div class="panelBar">
        <div class="pages">
            <span>显示</span>
            <select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value}, 'jbsxBox')">
                @if (ViewBag.PageSize == 5)
                {
                    <option value="5" selected>5</option>
                }
                else
                {
                    <option value="5">5</option>
                }
                @if (ViewBag.PageSize == 10)
                {
                    <option value="10" selected>10</option>
                }
                else
                {<option value="10">10</option>
                }
                @if (ViewBag.PageSize == 20)
                {
                    <option value="20" selected>20</option>
                }
                else
                {
                    <option value="20">20</option>
                }
            </select>
			<span>条，共 @ViewBag.TotalCount 条</span>
		</div>
		
		<div class="pagination" rel="jbsxBox" totalCount="@ViewBag.TotalCount" numPerPage="@ViewBag.pagesize" pageNumShown="10" currentPage="@ViewBag.pageindex"></div>

	</div>
</div>
