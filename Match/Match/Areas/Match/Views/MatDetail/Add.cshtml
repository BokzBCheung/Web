@{
    Layout = null;
}

<div class="pageContent">
	<form method="post" action="/Match/MatDetail/AddSave" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone)">
		<div class="pageFormContent" layoutH="56">
			<p>
				<label>竞赛名称：</label>
				<input name="CName" type="text" size="30" value="" class="required"  alt="请输入竞赛名称"/>
                <input name="CPublisherName" type="hidden" value="管理员" />
                @*关于发布者的信息源*@
			</p>
            <dl class="nowrap">
                <dt>竞赛介绍：</dt>
                <dd>
                    <textarea name="CIntroduce" cols="80" rows="2" placeholder="请输入竞赛简介"></textarea></dd>
            </dl>
            <p>
				<label>竞赛开始时间：</label>
				<input type="text" name="CStartTime" class="date" readonly="true" @*alt="请选择比赛开始时间"*@/>
				<a class="inputDateButton" href="javascript:;">选择</a>
			</p>
            <p>
				<label>竞赛结束时间：</label>
				<input type="text" name="CEndTime" class="date" readonly="true" @*alt="请选择比赛结束时间"*@/>
				<a class="inputDateButton" href="javascript:;">选择</a>
			</p>
            <p>
                <label>报名开始时间：</label>
                <input type="text" name="CApplySTime" class="date" readonly="true"@* alt="请选择报名开始时间"*@ />
                <a class="inputDateButton" href="javascript:;">选择</a>
            </p>
            <p>
                <label>报名结束时间：</label>
                <input type="text" name="CApplyETime" class="date" readonly="true" @*alt="请选择报名结束时间"*@ />
                <a class="inputDateButton" href="javascript:;">选择</a>
            </p>
            <p>
				<label>比赛类型：</label>
				<select name="CType" class="required combox">
					<option value="">请选择</option>
					<option value="1">校级</option>
					<option value="2" selected>院级</option>
					<option value="3">省级</option>
				</select>
				<span class="unit">请确认该比赛的类型</span>
			</p>
            <div style="float:left">
                <label>附件上传:</label>
                <p style="width:30%">
                    <label>文件一</label>
                    <input name="CAttachment1" type="file" />
                </p>
                <p style="width:30%">
                    <label>文件二</label>
                    <input name="CAttachment2" type="file" />
                </p>
            </div>
            	
		</div>
		<div class="formBar">
			<ul>
				<!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
				<li>
					<div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
				</li>
			</ul>
		</div>
	</form>
</div>


